<!DOCTYPE html>
<% include partials/header2%>


    <body>
          
        <div class="ui grid">
        <div class="four wide column">
             <img class="ui container fluid image" src="/uploads/<%=currentuser.image[0]%>">  
                       
  <form action="/proupload" method="POST" enctype="multipart/form-data">
    <div class="ui containter file-field input-field">
      <div class="btn grey">
      
        <input name="myImage" type="file">
      </div>
    
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" hidden>
      </div>
    </div>
    
    <button type="submit" class="btn"> 
    Upload Profile Picture
    </button>

  </form>
        
  
            
        </div>
        
         <div class="twelve wide column">
                 
            <h1>
                
               Image Upload
                
            </h1>
            <%=typeof msg != 'undefined' ? msg:''%>
            
            
  <form action="/uploads" method="POST" enctype="multipart/form-data">
    <div class="file-field input-field">
      <div class="btn grey">
      
        <input name="myImage" type="file">
      </div>
    
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" hidden>
      </div>
    </div>
    
    <button type="submit" class="btn"> 
    Upload
    </button>

  </form>
        
           
             
               <%currentuser.image.forEach(function(photos){%>
            <%if(photos.includes("myImage")){%>
                            <svg width="300" height="300">
                                <image xlink:href="/uploads/<%=photos%>"  width="100%" height="100%"></image>
                                </svg>
             <% } } );%>
             
         </div>
        
        
        
        
        
        
        
        </div>
        
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>

        
<script>
var count = 0; // needed for safari
window.onload = function () { 
    if (typeof history.pushState === "function") { 
        history.pushState("back", null, null);          
        window.onpopstate = function () { 
            history.pushState('back', null, null);              
             if(count == 1){window.location = '/userprofiles';}
            console.log('back')
         }; 
     }
 }  
setTimeout(function(){count = 1;},200);

</script>
     </body>
</html>