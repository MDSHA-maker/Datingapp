<!doctype html>
<html>
  <head>
    <title>Sample chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>

  <body>
<h1 id="u"> <%=JSON.stringify(username)%> </h1>
<h1 id="n"> <%=JSON.stringify(room)%> </h1>
     
    <ul id="messages">
       
      
    <%messages.forEach(function(msg){%>
        <li>
          <span>
            <%=username%>
            
            
          </span>
              <%=msg.message%>  
               <%=msg.handle%>
                <%=msg.timestamp%>
        </li>
     
        
        
        
        <% }); %>
        
        
    </ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
  <script>

    $(function () {
       var name = JSON.parse($('#n').text());
      var socket = io('',{query: 'room='+name});
        var user = JSON.parse($('#u').text());
          var datetime;
     
      $('form').submit(function(e){
        e.preventDefault(); // prevents page reloading
      datetime=new Date().toLocaleString().split(',').join("");
        var arr=[$('#m').val(), name,user,datetime];
        var msg= $('#m').val()
        socket.emit('chat message', arr);
        socket.emit('room', name);
    
        $('#m').val('');
        return false;
      });
      socket.on('chat message', function(msg){
        $('#messages').append($('<li>').text(user + ": " + msg +new Date().toLocaleString().split(',').join("")) );
        console.log("chatuser"+user);
      });
    });
  </script>
  </body>
</html>
